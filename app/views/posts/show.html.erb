<% if current_user == @post.user %>
    <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary" %>
    <%= link_to "Delete", post_path(@post), method: :delete, class: "btn btn-danger" %>
<% end %>

<h1><%= @post.title %></h1>

<p><%= @post.pretty_word_count %></p>

<br>

<p><%= @post.body.html_safe %></p>

<br>

<p>Written by <%= @post.user.email %></p>

<h3>
  <%= link_to "#heart", class: "js-heart-post", data: { post_id: @post.id } do %>
    <%= fa_icon "heart-o" %>
  <% end %>
  <span class="js-heart-count" style="font-size:12px;"> 20</span>
</h3>
