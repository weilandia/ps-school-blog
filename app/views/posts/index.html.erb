<h1>Posts#index</h1>

<table>
    <thead>
        <td>Id</td>
        <td>Title</td>
        <td>Word Count</td>
        <td>Author</td>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.id %></td>
                <td><%= link_to post.title, post_path(post.id) %></td>
                <td><%= post.word_count %></td>
                <td><%= post.user.email %></td>
            </tr>
        <% end %>
    </tbody>
</table>
