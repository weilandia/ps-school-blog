<%= form_for(@post) do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>

    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_field :body, class: "quill_container" %>
    </div>
    
    <div class="form-group">
        <%= f.submit %>
    </div>
    
<% end %>